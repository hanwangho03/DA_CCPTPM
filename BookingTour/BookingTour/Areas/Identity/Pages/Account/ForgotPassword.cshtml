@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Log in";
    Layout = null; // Hoặc layout bạn sử dụng
}

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link href="~/css/stylelogin.css" rel="stylesheet" />
    <script>
        // Hàm kiểm tra email
        document.addEventListener('DOMContentLoaded', function () {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.addEventListener('click', function () {
                const emailInput = document.getElementById('emailInput').value.trim();
                const emailPopupWrapper = document.getElementById('emailPopupWrapper');

                // Kiểm tra email trống
                if (!emailInput) {
                    showPopup("Vui lòng nhập email!");

                }
            });
        });

        // Hàm hiển thị popup
        function showPopup(message) {
            const emailPopupWrapper = document.getElementById('emailPopupWrapper');
            const popupMessage = document.getElementById('popupMessage');
            popupMessage.innerText = message;
            emailPopupWrapper.style.display = 'block';
        }

        // Hàm đóng popup
        function closeEmailPopup() {
            const emailPopupWrapper = document.getElementById('emailPopupWrapper');
            emailPopupWrapper.style.display = 'none';
        }

        // Hàm validate email cơ bản

    </script>
    <title>Sign in & Sign up Form</title>
</head>
<body>
    <div class="container">
        <div id="emailPopupWrapper" style="display: none;
                    position: fixed;
                    top: 10%;
                    left: 50%;
                    transform: translate(-50%, 0);
                    width: 80%;
                    max-width: 400px;
                    background-color: rgba(255, 0, 0, 0.9);
                    color: white;
                    text-align: center;
                    padding: 20px;
                    border-radius: 10px;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                    z-index: 1000;">
            <p id="popupMessage" style="margin: 0; font-size: 18px; font-weight: bold;">
                <!-- Thông báo sẽ được thêm tại đây -->
            </p>
            <button onclick="closeEmailPopup()" style="margin-top: 10px;
                        background-color: white;
                        color: red;
                        border: none;
                        padding: 10px 20px;
                        font-size: 16px;
                        border-radius: 5px;
                        cursor: pointer;">
                Đóng
            </button>
        </div>

        <div class="forms-container">
            <div class="signin-signup">
                <form action="#" class="sign-in-form hidden">
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user" aria-hidden="true"></i>
                        <input type="text" placeholder="Username" required="">
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock" aria-hidden="true"></i>
                        <input type="password" placeholder="Password" required="">
                    </div>
                    <a href="#" class="forgot-password">Forgot password?</a>
                    <input type="submit" value="Login" class="btn solid">
                    <p class="social-text">Or Sign in with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f" aria-hidden="true"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fas fa-envelope" aria-hidden="true"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google" aria-hidden="true"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fas fa-sms" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>

                <!-- Sign Up Form -->
                <form action="#" class="sign-up-form hidden">
                    <h2 class="title">Sign up</h2>
                    <div class="input-field">
                        <i class="fas fa-user" aria-hidden="true"></i>
                        <input type="text" placeholder="Username" required="">
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope" aria-hidden="true"></i>
                        <input type="email" placeholder="Email" required="">
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock" aria-hidden="true"></i>
                        <input type="password" placeholder="Password" required="">
                    </div>
                    <input type="submit" class="btn" value="Sign up">
                    <p class="social-text">Or Sign up with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f" aria-hidden="true"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fas fa-envelope" aria-hidden="true"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google" aria-hidden="true"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fas fa-sms" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
                <form method="post" id="forgotPasswordForm" class="forgot-password-form show" style="background-color:white;">
                    <h2 class="title">Forgot Password</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="Input.Email" placeholder="Nhập gmail" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn">Gửi</button>
                </form>
