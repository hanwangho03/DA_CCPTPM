@model BookingTour.Models.Payment

@{
    ViewData["Title"] = "Chi Tiết Thanh Toán";
    Layout = "~/Views/Shared/_LayoutHost.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-4">
    <h4>Thông Tin Thanh Toán</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 font-weight-bold">
           Ngày thanh toán:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt class="col-sm-3 font-weight-bold">
         Phương thức:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Method)
        </dd>

        <dt class="col-sm-3 font-weight-bold">
Số tiền thanh toán:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt class="col-sm-3 font-weight-bold">
         Trạng thái:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Status)
        </dd>

     

        <dt class="col-sm-3 font-weight-bold">
Số tiền hoàn trả:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RefundAmount)
        </dd>

        <dt class="col-sm-3 font-weight-bold">
           Ngày hoàn trả:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RefundDate)
        </dd>

     
    </dl>

    <!-- Các nút điều hướng -->
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.IdPayment" class="btn btn-warning">Chỉnh Sửa</a> |
        <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
    </div>
</div>

