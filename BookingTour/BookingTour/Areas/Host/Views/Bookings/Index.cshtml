@model IEnumerable<BookingTour.Models.Booking>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutHost.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CheckInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdHotelNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdStatusNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTourNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdHotelNavigation.IdHotel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdStatusNavigation.IdStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTourNavigation.IdTour)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdBooking">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdBooking">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdBooking">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
