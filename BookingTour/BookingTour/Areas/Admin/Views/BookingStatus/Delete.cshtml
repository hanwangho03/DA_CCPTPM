@model BookingTour.Models.BookingStatus

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-weight: bold; color: #e74c3c;">Xóa Trạng Thái Đặt Tour</h1>

<h3 style="color: #c0392b;">Bạn có chắc chắn muốn xóa mục này không?</h3>
<div style="background-color: #f9f9f9; padding: 20px; border-radius: 8px;">
    <h4 style="font-weight: bold; color: #34495e;">Thông Tin Trạng Thái</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="font-weight: bold;">@Html.DisplayNameFor(model => model.StatusName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.StatusName)</dd>
        <dt class="col-sm-2" style="font-weight: bold;">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        <dt class="col-sm-2" style="font-weight: bold;">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedAt)</dd>
    </dl>

    <form asp-action="Delete" method="post" style="margin-top: 20px;">
        <input type="hidden" asp-for="IdStatus" />
        <button type="submit" class="btn btn-danger" style="width: 150px; font-weight: bold;">Xóa</button> |
        <a asp-action="Index" class="btn btn-secondary" style="width: 150px; font-weight: bold; text-align: center; display: inline-block;">Quay lại</a>
    </form>
</div>
