@model BookingTour.Areas.Admin.Controllers.VerifyOtpViewModel

@{
    ViewData["Title"] = "Gửi mã OTP";
}

<h2>Gửi mã OTP</h2>

<form method="post" asp-action="SendOtp" asp-controller="Account" asp-area="Admin">
    <div class="form-group">
        <label for="phoneNumber">Số điện thoại</label>
        <input type="text" name="phoneNumber" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Gửi mã OTP</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}
