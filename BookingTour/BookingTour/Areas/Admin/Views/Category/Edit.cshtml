@model BookingTour.Models.TypeOfTour

@{
    ViewData["Title"] = "Edit Type Of Tour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chỉnh sửa danh mục tour</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdType" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" asp-route-area="Admin" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
