@model BookingTour.Models.TypeOfTour

@{
    ViewData["Title"] = "Chi Tiết Loại Tour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-weight: bold; color: #34495e; text-align: center; margin-bottom: 20px;">Chi Tiết Loại Tour</h1>

<!-- Hiển thị thông tin chi tiết của loại tour -->
<div style="background-color: #f8f9fa; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); max-width: 800px; margin: 0 auto;">
    <h3 style="color: #2c3e50; font-size: 24px; text-align: center; margin-bottom: 20px;">@Model.Name</h3>

    <div style="font-size: 18px; line-height: 1.6; margin-bottom: 15px;">
        <p><strong style="color: #2980b9;">Mô Tả:</strong> @Model.Description</p>
     @*    <p><strong style="color: #2980b9;">Ngày Tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p> *@
    </div>

    <div style="display: flex; justify-content: center; gap: 15px; margin-top: 20px;">
        <a asp-action="Edit" asp-route-id="@Model.IdType" class="btn" style="background-color: #2980b9; color: white; padding: 12px 30px; font-size: 16px; border-radius: 5px; text-align: center; text-decoration: none; transition: background-color 0.3s ease-in-out;">
            Sửa
        </a>
        <a asp-action="Index" class="btn" style="background-color: #95a5a6; color: white; padding: 12px 30px; font-size: 16px; border-radius: 5px; text-align: center; text-decoration: none; transition: background-color 0.3s ease-in-out;">
            Quay lại
        </a>
    </div>
</div>

<!-- Thêm hiệu ứng hover cho các nút -->
<style>
    .btn:hover {
        opacity: 0.8;
    }
</style>
