<div id="chatBotContainer" style="display: none;">
    <div id="chatBotHeader">
        <h4>Chat với chúng tôi</h4>
        <button onclick="toggleChatBot()">×</button>
    </div>
    <div id="chatBotBody">
        <!-- Tin nhắn sẽ hiển thị tại đây -->
    </div>
    <input type="text" id="chatInput" placeholder="Gõ tin nhắn..." onkeypress="sendMessageToBot(event)">
</div>

<button id="chatToggleButton" onclick="toggleChatBot()">💬</button>

<style>
    /* CSS cho chatbot */
    #chatBotContainer {
        position: fixed;
        bottom: 80px;
        right: 100px;
        width: 300px;
        max-height: 500px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        display: none;
        flex-direction: column;
        overflow: hidden;
        z-index: 1000;
        font-family: Arial, sans-serif;
    }

    #chatBotHeader {
        background-color: #007bff;
        color: white;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        #chatBotHeader button {
            background-color: transparent;
            color: white;
            border: none;
            font-size: 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            #chatBotHeader button:hover {
                background-color: rgba(255, 255, 255, 0.3);
                border-radius: 50%;
            }

    #chatBotBody {
        padding: 10px;
        overflow-y: auto;
        flex-grow: 1;
        max-height: 400px;
        border-top: 1px solid #f1f1f1;
        display: flex;
        flex-direction: column;
    }

    .userMessage {
        background-color: #dcf8c6;
        color: #333;
        padding: 8px 12px;
        border-radius: 12px;
        margin: 5px 0;
        display: inline-block;
        max-width: 80%;
        align-self: flex-end;
    }

    .botMessage {
        background-color: #f1f1f1;
        color: #333;
        padding: 8px 12px;
        border-radius: 12px;
        margin: 5px 0;
        display: inline-block;
        max-width: 80%;
        align-self: flex-start;
    }

    #chatInput {
        width: calc(100% - 20px);
        padding: 10px;
        border: none;
        border-top: 1px solid #f1f1f1;
        outline: none;
        font-size: 14px;
        box-sizing: border-box;
    }

    #chatToggleButton {
        position: fixed;
        bottom: 20px;
        right: 100px;
        width: 50px;
        height: 50px;
        background-color: #007bff;
        color: white;
        border-radius: 50%;
        border: none;
        font-size: 24px;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        z-index: 1000;
    }

        #chatToggleButton:hover {
            background-color: #0056b3;
        }

</style>

<script>
    function toggleChatBot() {
        let chatContainer = document.getElementById("chatBotContainer");
        chatContainer.style.display = chatContainer.style.display === "none" || chatContainer.style.display === "" ? "block" : "none";
    }

    function sendMessageToBot(event) {
        if (event.key === "Enter") {
            let message = document.getElementById("chatInput").value.trim();
            console.log(message)
            if (message) {
                addMessage("Bạn", message);

                fetch("/ChatBot/SendMessage", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(message) // Chuyển tin nhắn thành đối tượng JSON
                })
                    .then(response => {
                        console.log(response)
                        if (!response.ok) {
                            throw new Error("Network response was not ok: " + response.statusText);
                        }
                        return response.json();
                    })
                    .then(data => {
                        addMessage("Bot", data.response); // Giả sử API trả về đối tượng với key "response"
                    })
                    .catch(error => console.error("Lỗi khi gửi tin nhắn:", error));

                document.getElementById("chatInput").value = "";
            }
        }
    }

    function addMessage(sender, text) {
        let chatBody = document.getElementById("chatBotBody");
        let messageDiv = document.createElement("div");
        messageDiv.className = sender === "Bạn" ? "userMessage" : "botMessage";
        messageDiv.innerHTML = `<strong>${sender}: </strong>${text}`;
        chatBody.appendChild(messageDiv);
        chatBody.scrollTop = chatBody.scrollHeight; // Tự động cuộn xuống dưới
    }
</script>
