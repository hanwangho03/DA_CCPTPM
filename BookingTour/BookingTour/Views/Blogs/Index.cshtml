    <!-- Phần nội dung blog chính -->
    <div style="flex: 2; max-width: 800px;">
        @foreach (var blog in Model)
        {
            <div style="background: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); margin-bottom: 20px;">
                <div style="text-align: center;">
                    <img src="@Url.Content("~/images/" + blog.ImageUrl)" alt="Thumbnail" style="width: 100%; max-height: 300px; object-fit: cover; border-radius: 8px;">
                </div>
                <h2 style="font-size: 22px; margin-top: 10px; color: #333;">@blog.Title</h2>
                <p style="color: #999; font-size: 14px;">Ngày tạo: @blog.CreatedAt.ToString("dd/MM/yyyy")</p>
                <div style="margin-top: 10px;">
                    @if (!string.IsNullOrEmpty(blog.Tags))
                    {
                        foreach (var tag in blog.Tags.Split(','))
                        {
                            <span style="background-color: #e0e7ff; color: #3b82f6; padding: 5px 10px; border-radius: 15px; font-size: 12px; margin-right: 5px;">@tag</span>
                        }
                    }
                </div>
                <div style="font-size: 16px; color: #555; line-height: 1.6; margin-top: 10px;">
                    <p>@(blog.Content.Length > 200 ? blog.Content.Substring(0, 200) + "..." : blog.Content)</p>
                </div>
            </div>
        }
    </div>

